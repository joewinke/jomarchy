#!/usr/bin/env bash
# Quick minimal test data generation
# Usage: db-seed-mini --user
#        db-seed-mini --brand
#        db-seed-mini --full

if [ "$1" == "--help" ] || [ "$1" == "-h" ]; then
  echo "Usage: db-seed-mini [options]"
  echo ""
  echo "Options:"
  echo "  --user       Create test user"
  echo "  --brand      Create test brand with user"
  echo "  --full       Complete test dataset"
  echo "  --cleanup    Remove test data"
  echo ""
  echo "Examples:"
  echo "  db-seed-mini --user"
  echo "  db-seed-mini --brand"
  echo "  db-seed-mini --cleanup"
  exit 0
fi

echo "⚠️  Mini seed not yet implemented"
echo ""
echo "Planned functionality:"
echo "1. Create minimal test user"
echo "2. Create test brand with user"
echo "3. Create sample assets/sessions"
echo "4. Much faster than full seed"
echo "5. Include cleanup command"
echo ""
echo "For now, use: supabase db reset"
exit 1
