#!/usr/bin/env bash
# Compare model outputs side-by-side
# Usage: model-compare "Your prompt" --models gpt-4,claude-sonnet

if [ "$1" == "--help" ] || [ "$1" == "-h" ]; then
  echo "Usage: model-compare <prompt> --models <model1,model2,...>"
  echo ""
  echo "Examples:"
  echo "  model-compare \"Describe this product\" --models gpt-4,claude-sonnet,sambanova"
  exit 0
fi

echo "⚠️  Model comparison not yet implemented"
echo "This tool requires API integration"
echo ""
echo "Planned functionality:"
echo "1. Send same prompt to multiple models"
echo "2. Show responses side-by-side"
echo "3. Compare token usage, cost, latency"
echo "4. Useful for model selection"
exit 1
